<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabsLayout" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/tab_bg_selector"
	android:padding="5dip" android:gravity="center" android:orientation="vertical">
	<ImageView android:id="@+id/tabsIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
			/>

	<TextView android:id="@+id/tabsText" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Title" android:textStyle="bold"
		android:textSize="13dp" android:textColor="@drawable/tab_text_selector" />
</LinearLayout>
 